{
  "compilerOptions": {
    "jsx": "react",
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,

    "target": "ESNext",
    "esModuleInterop": true,

    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist"
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": true
  },
  "include": ["vite.config.ts", "postcss.config.ts", "src/**/*"]
}
